<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:text="Textview"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/textViewNameone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/buttonplus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="incrementVeg"
        android:layout_alignParentRight="true"
        android:text="+" />


    <TextView
        android:id="@+id/TextViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"

        android:text="0"
        android:textColor="#000000"

        android:layout_toLeftOf="@id/buttonplus"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonminus"

        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="decrementVeg"
        android:layout_toLeftOf="@id/TextViewQuantity"
        android:text="-" />
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_below="@id/TextViewQuantity"
        android:text="price"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textViewPrice"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/TextViewQuantity"
        android:text="price ="/>
</RelativeLayout>
